<package type="addon" name="nuxeo-flavors-unicolor" version="@VERSION@">
  <title>Unicolor Flavors Set</title>
  <description>
    <p>This package offers you the Unicolor set of flavors to customize the colors of your platform easily.</p>
	<p>The Unicolors set contains a dark header and footer, and one main color for the content. Blue, Brown, Gray, Green, Mantis, Orange, Pink, Purple, Red, Turquoise and Yellow.</p>
  </description>
  <home-page>https://github.com/nuxeo/nuxeo-flavors</home-page>
  <vendor>Nuxeo</vendor>
  <installer restart="true" />
  <uninstaller restart="true" />
  <hotreload-support>true</hotreload-support>
  <require-terms-and-conditions-acceptance>false</require-terms-and-conditions-acceptance>
  <nuxeo-validation>nuxeo_certified</nuxeo-validation>
  <production-state>production_ready</production-state>
  <supported>true</supported>
  <platforms>
    <platform>cap-@DISTVERSION@</platform>
  </platforms>
  <license>LGPL</license>
  <license-url>http://www.gnu.org/licenses/lgpl.html</license-url>
</package>
